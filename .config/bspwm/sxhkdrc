XF86AudioPrev
	playerctl previous

XF86AudioPlay
	playerctl play-pause
	
XF86AudioNext
	playerctl next
	
XF86Display
	arandr

XF86Calculator
	speedcrunch

XF86AudioRaiseVolume
	amixer sset Master 650+ unmute; 

XF86AudioMicMute
	amixer sset Capture toggle;

XF86AudioLowerVolume
	amixer sset Master 650- unmute;

XF86AudioMute
	amixer sset Master {mute,unmute}; \
	amixer sset Speaker unmute; \
	amixer sset Headphone unmute;

XF86MonBrightness{Up,Down}
	brightnessctl s 970{+,-}
#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + space
	rofi -show | sed 's/.*=//' | tr -d '[:space:]' | xclip -selection clipboard	# rofi, copy math result to clipboard
	#dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k};

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,z,c}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{j,k,i,l}
	bspc node -{f,s} {west,south,north,east}; 

# focus {@parent, @first, @/}
super + {_, shift +,ctrl +} p
	bspc node -f @{parent,first,/}

# rotate the node 90 degree {left, right}
super + {u,o}
	bspc node -R {270,90}

# balance/equalize nodes
super + {_,shift +} h
	bspc node -{E,B}

# focus the next/previous desktop in the current monitor
alt + {_,shift + } Tab
	bspc node -f {next,prev}.local.window

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last; 

super + shift + Tab
	bspc node -d last


# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} "$(bspc query -m -M)":^{1-9,10}; 

# focus monitor
super + {_,shift + }{F1,F2,F3,F4,F5}
	bspc {desktop -f, node -d} ^{1,2,3,4,5}:focused;


#
# preselect
#

# preselect the direction
super + ctrl + {j,k,i,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {j,k,i,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + ctrl + {j,k,i,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# lock
ctrl + alt + l
	. .config/bspwm/scripts/lock.sh

#
# Programms
#

# Keepass

ctrl + alt + k
	keepassxc

super + e
	DESKTOP_SESSION=kde dolphin

ctrl + alt + n
	networkmanager_dmenu -l 30

ctrl + alt + super + n
	killall nm-applet; \
	nm-applet

ctrl + alt + m 
	bash ~/.config/bspwm/scripts/open-telegram-desktop.sh
